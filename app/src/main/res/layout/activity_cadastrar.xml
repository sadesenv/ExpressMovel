<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.geral"
    tools:context=".CadastrarUsuarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/cadastrar_nome"
                style="@style/AppTheme.input"
                android:gravity="top"
                android:hint="@string/nome" />

            <EditText
                android:id="@+id/cadastrar_endereco"
                style="@style/AppTheme.input"
                android:layout_below="@id/cadastrar_nome"
                android:hint="@string/endereco" />

            <EditText
                android:id="@+id/cadastrar_bairro"
                style="@style/AppTheme.input"
                android:layout_below="@id/cadastrar_endereco"
                android:hint="@string/bairro" />

            <EditText
                android:id="@+id/cadastrar_cidade"
                style="@style/AppTheme.input"
                android:layout_below="@id/cadastrar_bairro"
                android:hint="@string/cidade" />

            <EditText
                android:id="@+id/cadastrar_telefone"
                style="@style/AppTheme.input"
                android:layout_below="@id/cadastrar_cidade"
                android:hint="@string/telefone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/cadastrar_email"
                style="@style/AppTheme.input"
                android:layout_below="@id/cadastrar_telefone"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />

            <Switch
                android:id="@+id/cadastrar_tipo_perfil"
                style="@style/AppTheme.input"
                android:layout_below="@+id/cadastrar_email"
                android:text="@string/checkbox_entregador"
                android:onClick="tipoPerfil"/>

            <TextView
                style="@style/AppTheme.texto"
                android:id="@+id/tipoVeiculo"
                android:layout_below="@id/cadastrar_tipo_perfil"
                android:text="@string/tipo_de_veiculo"
                android:visibility="gone"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerTipoVeiculo"
                android:layout_below="@id/tipoVeiculo"
                android:entries="@array/TpVeiculo"
                android:visibility="gone" />

            <EditText
                style="@style/AppTheme.input"
                android:id="@+id/placa"
                android:layout_below="@id/spinnerTipoVeiculo"
                android:hint="@string/placa"
                android:inputType="text"
                android:visibility="gone"/>

            <Button
                style="@style/AppTheme.btn"
                android:id="@+id/btnSalvarUsuario"
                android:layout_below="@id/placa"
                android:onClick="Salvar"
                android:text="@string/salvar" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
